<div class="container mx-auto mt-10">
  <h1 class="text-center text-indigo-800 text-4xl font-extralight mb-8">
    Buscar endereço por CEP
  </h1>
  <%= form_with url: root_path, method: :get, local: true, class: "text-lg max-w-md mx-auto bg-white p-8 rounded-xl shadow-md" do |form| %>
    <div class="mb-4">
      <%= form.label :cep, "Digite o CEP:", class: "block text-indigo-600" %>
      <%= form.text_field :cep, class: "mt-2 p-2 border rounded w-full" %>
    </div>
    <%= form.submit "Buscar", class: "bg-indigo-600 hover:bg-indigo-500 text-white font-bold py-2 px-4 rounded" %>
  <% end %>

  <% if @address %>
    <div class="mt-6 p-4 max-w-2xl mx-auto bg-slate-100 tracking-wider shadow-lg rounded text-gray-700">
      <h2 class="text-indigo-600 text-2xl font-light mb-5">Endereço encontrado:</h2>
      
      <div class="flex mb-4">
        <p class="flex-auto"><strong class="text-indigo-600 font-light">Cidade:</strong> <span class="text-2xl"><%= @city %></span></p>
        <p class=""><strong class="text-indigo-600 font-light">Estado:</strong> <span class="text-2xl"><%= @state %></span></p>
      </div>

      <div class="text-sm">
        <p><strong class="text-indigo-600 font-light">Endereço:</strong> <%= @address %></p>
        <p><strong class="text-indigo-600 font-light">Bairro:</strong> <%= @district %></p>
      </div>

      <div class="mt-3 flex text-xs">
        <p class="flex-auto"><strong class="text-indigo-600 font-light">DDD:</strong> <%= @ddd %></p>
        <p><strong class="text-indigo-600 font-light text-center">CEP:</strong> <%= @cep %></p>
      </div>
    </div>
  <% end %>

  <% if @error %>
    <div class="mt-6 p-4 max-w-2xl mx-auto bg-blue-100 text-center tracking-wider shadow-lg rounded text-lg text-indigo-900">
      <p><%= @error %></p>
    </div>
  <% end %>
</div>