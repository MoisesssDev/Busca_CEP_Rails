<div class="mt-6 p-4 max-w-2xl mx-auto bg-slate-100 tracking-wider shadow-lg rounded text-gray-700">
  <h2 class="text-indigo-600 text-2xl font-light mb-5">Endereço encontrado:</h2>
  
  <div class="flex mb-4">
    <p class="flex-auto"><strong class="text-indigo-600 font-light">Cidade:</strong> <span class="text-2xl"><%= address['city'] %></span></p>
    <p class=""><strong class="text-indigo-600 font-light">Estado:</strong> <span class="text-2xl"><%= address['state'] %></span></p>
  </div>

  <div class="text-sm">
    <p><strong class="text-indigo-600 font-light">Endereço:</strong> <%= address['address'] %></p>
    <p><strong class="text-indigo-600 font-light">Bairro:</strong> <%= address['district'] %></p>
  </div>

  <div class="mt-3 flex text-xs">
    <p class="flex-auto"><strong class="text-indigo-600 font-light">DDD:</strong> <%= address['ddd'] %></p>
    <p><strong class="text-indigo-600 font-light text-center">CEP:</strong> <%= address['cep'] %></p>
  </div>
</div>